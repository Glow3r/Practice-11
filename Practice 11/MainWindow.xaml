<Window x:Class="Practice_11.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Practice_11"
        mc:Ignorable="d"
        Title="Practice 11, variant 12" Height="250" Width="250" ResizeMode="NoResize">
    <Grid>

        <Grid Grid.Row="0">
            <Menu VerticalAlignment="Top">
                <MenuItem Header="Файл" Height="20">
                    <MenuItem Header="Выход" Click="Exit_Click"/>
                    <RadioButton Content="Задание 1" Checked="ExerciseOne_Checked"/>
                    <RadioButton Content="Задание 2" Checked="ExerciseTwo_Checked"/>
                </MenuItem>
                <MenuItem Header="Справка" Height="20">
                    <MenuItem Header="О программе" Click="Information_Click"/>
                </MenuItem>
            </Menu>
        </Grid>

        <Grid>
            <TextBox x:Name="inputValue" Height="20" Width="200"/>
            <Button Height="20" Width="200" Margin="0,50,0,0" Content="Найти" Click="GetMatches_Click"/>
        </Grid>
        
    </Grid>
</Window>
